<% if @user %>  <!-- NESTED : WITH A USER -->

    <h1> Check Out <%= link_to @user.name, user_path(@user) %>'s Fire Fits!🔥👟👘🎩✨ </h1>

    <ul>

        <% @outfits.each do |outfit| %>

            <li><%= link_to outfit.name, user_outfit_path(@user, outfit) %></li>
            USER_ID : <%= outfit.user_id %>
            <br><br>

        <% end %>

    </ul>


<% else %>  <!-- NON-NESTED : NO USER -->


    <h1> Here are Our Fire Fits!🔥👟👘🎩✨ </h1>


        <% @outfits.each do |outfit| %>
            <li><%= link_to outfit.name, outfit_path(outfit) %></li>
            USER_ID : <%= outfit.user_id %>
        <% end %>


<% end %>