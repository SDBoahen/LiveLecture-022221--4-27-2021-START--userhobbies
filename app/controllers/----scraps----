    def create
        binding.pry
        @user = User.new(user_params)
        # @user = User.new(params[:user][:name], params[:user][:username])
        if @user.save
            binding.pry
            redirect_to user_path(@user)
        else
            redirect_to new_user_path
        end
    end 




    private


    def user_params
        params.require(:user).permit(:name, :username)
